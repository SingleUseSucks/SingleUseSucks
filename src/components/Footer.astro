<img id="seabed" class="object-fit w-full" src="png/footer.svg" alt=""> 

<script>
window.addEventListener("scroll", parallaxScroll);

    function parallaxScroll() {
        const seabed = document.getElementById("seabed");
        if (seabed) {
            const scrollSpeed =-0.15;  // Adjust this value to control the scroll speed
            const scrollY = window.scrollY;
            seabed.style.transform = `translateY(${scrollY * scrollSpeed}px)`;
        }
    }
</script>
---
import Button from "./Button.astro"
---
<section class="mt-20 relative w-full min-h-screen flex flex-col justify-center items-center">
<h2 class="font-abel text-[48px] px-60 mb-2">Join <span style="color: #FF0755;">#SingleUseSucks</span> and save our planet
one step at a time</h2>

<div>
<img class="animation3 w-[250px] h-auto absolute top-30 left-20" src="png/decoration-recycle.png" alt="bubble2">
<img class="animation4 w-[250px] h-auto absolute top-70 right-20" src="png/decoration-bin.png" alt="bubble2">
</div>

<form class="font-abel p-6  mt-6 w-80">
            
            <div class="mb-4">
                <label for="first-name" class="block text-left font-medium">First Name</label>
                <input type="text" id="first-name" class="w-full p-2 border border-gray-300 rounded mt-1 focus:border-[#FF0755] focus:ring-2 focus:ring-[#FF0755]" required>
            </div>
            <div class="mb-4">
                <label for="last-name" class="block text-left font-medium">Last Name</label>
                <input type="text" id="last-name" class="w-full p-2 border border-gray-300 rounded mt-1 focus:border-[#FF0755] focus:ring-2 focus:ring-[#FF0755]" required>
            </div>
            <div class="mb-4">
                <label for="email" class="block text-left font-medium">Email</label>
                <input type="email" id="email" class="w-full p-2 border border-gray-300 rounded mt-1 focus:border-[#FF0755] focus:ring-2 focus:ring-[#FF0755]" required>
            </div>
            <div class="pt-16 cursor-pointer"><Button title="MAKE A DIFFERENCE"></Button></div>
            </section>
<script>
import { inView } from "motion";

const animation3 = document.querySelector(".animation3");
const animation4 = document.querySelector(".animation4");

inView(animation3, (element) => {
  // When the element comes into view, add the "slideInRight" animation
  element.classList.add(
    "animate__animated",
    "animate__fadeInLeft",
    "animate__delay-0.4s"
  );

  // When the element leaves the view, we add a "fadeOut" animation
  return () => {
    element.classList.remove(
      "animate__fadeInLeft", 
      "animate__delay-0.5s"
    );
    element.classList.add(
      "animate__animated",
      "animate__fadeInDown",
      "animate__delay-0.5s"
    );
  };
});

inView(animation4, (element) => {
  // When the element comes into view, add the "slideInRight" animation
  element.classList.add(
    "animate__animated",
    "animate__fadeInRight",
    "animate__delay-0.3s"
  );

  // When the element leaves the view, we add a "fadeOut" animation
  return () => {
    element.classList.remove(
      "animate__fadeInRight", 
      "animate__delay-0.5s"
    );
    element.classList.add(
      "animate__animated",
      "animate__fadeInDown",
      "animate__delay-0.5s"
    );
  };
});
</script>
